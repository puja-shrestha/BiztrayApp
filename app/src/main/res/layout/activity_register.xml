<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register your account"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        android:fontFamily="@font/sans"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="First name"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Last name"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Email address"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Password"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="confirm Password"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/sans"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Mobile Phone"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Contact no."
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Address"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Address"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Location"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Kathmandu"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Terms"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/terms_conditions"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="File Selected"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create"
            android:fontFamily="@font/sans"
            android:layout_marginTop="10dp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</ScrollView>