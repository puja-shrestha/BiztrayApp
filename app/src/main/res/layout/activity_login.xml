<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:padding="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/large_text_size" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/sans"
                    android:inputType="text"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_action_man_user"
                    android:drawableTint="#666565"
                    android:hint="Phone or email"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_action_key"
                    android:padding="5dp"
                    android:fontFamily="sans-serif"
                    android:hint="Password"
                    android:drawableTint="#666565"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/textViewPasswordNotMatched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/small_sixteen_text_size"
                    android:paddingTop="5dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="Forgot password ?"
                    android:textColor="@color/colorOrange" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="@color/colorOrange"
                    android:fontFamily="sans-serif"
                    android:text="@string/login"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text_size"
                    android:onClick="onButtonClick"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans"
                        android:text="@string/do_you_have_an_account_signup"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/textViewRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text=" Signup"
                        android:textAlignment="center"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/small_sixteen_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/sans"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/medium_text_size" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login with social network"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonGoogle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@color/colorGoogle"
                        android:drawableTint="@color/colorWhite"
                        android:drawableLeft="@drawable/ic_action_google_plus1"
                        android:fontFamily="@font/sans"
                        android:text="Google"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/small_sixteen_text_size" />

                    <Button
                        android:id="@+id/buttonFacebook"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@color/colorFacebook"
                        android:baselineAligned="false"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_action_facebook_letter_logo"
                        android:drawableTint="@color/colorWhite"
                        android:fontFamily="@font/sans"
                        android:text="Facebook"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/small_sixteen_text_size" />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:layout_centerInParent="true"
                android:id="@+id/loginRequestProgressBar"
                android:visibility="gone"
                android:theme="@style/AppTheme.OrangeAccent"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>